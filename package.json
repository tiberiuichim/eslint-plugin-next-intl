{
  "name": "eslint-plugin-next-intl",
  "version": "0.0.1",
  "type": "module",
  "description": "ESLint plugin and CLI for next-intl message validation",
  "main": "dist/index.js",
  "bin": {
    "next-intl-lint": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint .",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "next-intl",
    "i18n"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "glob": "^10.3.10",
    "node-util": "^0.0.1",
    "ts-morph": "^21.0.1"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-eslint-plugin": "^6.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
